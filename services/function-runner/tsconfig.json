{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../*"],
      "server-only": ["./src/shims/server-only.ts"]
    }
  },
  "include": ["src/**/*", "../../lib/**/*", "../../plugins/**/*"],
  "exclude": ["node_modules", "dist", "../../**/*.test.ts"]
}
